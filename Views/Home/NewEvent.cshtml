@using ent.Models
@model Event
<div id="wrapper">
    <a href="/">
        Home
    </a>

        

        <form asp-action="CreateEvent" asp-controller="Home" method="POST">
            <span asp-validation-for="Title"></span>
            <label asp-for="Title"></label>
            <input asp-for="Title">
            <span asp-validation-for="Start"></span>
            <label asp-for="Start"></label>
            <input asp-for="Start">
            <span asp-validation-for="Durration"></span>
            <label asp-for="Durration"></label>
            <input asp-for="Durration">
            <select asp-for="Type">
                <option value="0">Days</option>
                <option value="1">Hours</option>
                <option value="2">Minutes</option>
            </select>

            <span asp-validation-for="Description"></span>
            <label asp-for="Description"></label>
            <textarea asp-for="Description"></textarea>
            
            
            <input type="submit" value="Submit">
        </form>

    
</div>

